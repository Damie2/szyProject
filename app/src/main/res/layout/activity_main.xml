<?xml version="1.0" encoding="utf-8"?>
<com.smh.szyproject.other.widget.other.HintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_above="@+id/fl_bottom"
            android:background="@color/user_division_line_E" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0px"
            android:orientation="horizontal"
            android:weightSum="2.0">

            <TextView
                android:id="@+id/tv_menu_first"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawableTop="@drawable/article_1"
                android:gravity="center"
                android:onClick="switchViewById"
                android:paddingBottom="0.0px"
                android:text="主页"
                android:textSize="28.0px" />

            <TextView
                android:id="@+id/tv_menu_second"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawableTop="@drawable/wallet_1"
                android:gravity="center"
                android:onClick="switchViewById"
                android:text="我的"
                android:textSize="28.0px" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/fl_bottom" />
    </RelativeLayout>
</com.smh.szyproject.other.widget.other.HintLayout>
