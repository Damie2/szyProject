<?xml version="1.0" encoding="utf-8"?>
<com.smh.szyproject.widget.other.HintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_zx"
            android:layout_centerInParent="true"
            android:src="@mipmap/zx"
            android:layout_width="300dp"
            android:layout_height="200dp"/>

        <RelativeLayout
            android:layout_alignBottom="@id/iv_zx"
            android:background="#FFFF00"
            android:layout_alignRight="@id/iv_zx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:textSize="28sp"
            android:id="@+id/tv_mgzx"
            android:text="木瓜滞销"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_below="@id/tv_mgzx"
                android:text="帮帮我们"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView

            android:visibility="gone"
            android:text="123"
            android:layout_centerInParent="true"
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</com.smh.szyproject.widget.other.HintLayout>
