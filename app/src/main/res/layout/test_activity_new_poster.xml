<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_save_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:drawableTop="@drawable/s3"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="保存到相册"
            android:textColor="#36373d"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_share_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:drawableTop="@drawable/s1"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="分享到朋友圈" />

        <TextView
            android:id="@+id/tv_share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:drawableTop="@drawable/s2"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="分享到微信好友" />
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rv_middle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_middle"
        android:layout_width="match_parent"
        android:layout_height="194px"
        android:layout_above="@id/ll_bottom"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px">

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rv_middle"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="194px"-->
<!--        android:layout_marginLeft="40px"-->
<!--        android:layout_marginRight="40px">-->

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>
